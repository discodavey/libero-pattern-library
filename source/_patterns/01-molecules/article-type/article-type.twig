<ul class="article__type">
  {% for item in items %}
    {%- with item only -%}
      {%- block item -%}

        {%- set attributes = attributes|default({})|merge({class: attributes.class|default([])|merge(['article__type__item']) }) -%}

        <li {%- include('atoms-attributes') -%}>

          {%- with content only -%}
            {%- block content -%}

              {%- if attributes.href is defined -%}
                {%- set attributes = attributes|default({})|merge({class: attributes.class|default([])|merge(['article__type__link']) }) -%}
              {%- endif -%}

              {%- include 'atoms-link' -%}

            {%- endblock content -%}
          {%- endwith -%}

        </li>

      {%- endblock item -%}
    {%- endwith -%}
  {% endfor %}
</ul>

